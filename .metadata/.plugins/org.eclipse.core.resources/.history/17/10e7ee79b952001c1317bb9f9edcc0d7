package com.tell.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

import com.tell.model.CropDetails;




@RestController
@RequestMapping("/cart")
public class CartController {
	@Autowired
	private RestTemplate restTemplate;

	@RequestMapping("/{id}")
	public List<CropDetails> getCropDetails(@PathVariable("id") String id){
		CropDetails cropDetails  = restTemplate.getForObject("http://CropDetails/cropdetails/" +id,CropDetails.class);
		return  List<CropDetails>();
}
	
}
