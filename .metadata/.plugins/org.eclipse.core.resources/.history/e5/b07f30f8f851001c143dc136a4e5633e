package com.tell.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.tell.model.Crop;
import com.tell.repository.CropRepository;

@Service
public class CropServiceImpl implements CropService{
	@Autowired
	private CropRepository cropRepository ;
	
	//save the cropdetails
		@Override
		public Crop save( Crop crop) {
			Crop e =  cropRepository.save(crop);
			return e;
			
//			cropDetailsRepository.save(cropdetails);
//			return ("Added cropdetails with id: " + cropdetails.getCropID());
		}
		
		//find all cropdetails
		@Override
		public List<Crop> getAll(){
			return cropRepository.findAll();
		}
		
		//find the cropdetails by id
		@Override
		public Optional<Crop> getCropById(int id){
			return cropRepository.findById(id);
		}
		
		//delete the cropdetails by id
		@Override 
		public String deleteCrop( int id) {
			cropRepository.deleteById(id);
			 return "Delete cropdetails with id: "+id;
		}
		
		//update the cropdetails by id
		@Override
		public String updateCrop( Crop crop,  int id) {
			cropRepository.findById(id);
			cropRepository.save(crop);
			return "Update cropdetails with id: "+id;
			
		}
}