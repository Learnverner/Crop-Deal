package com.tell.controller;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;


import com.tell.model.Crop;

@RestController
@RequestMapping("/crop")
public class CropController {

@Autowired
private CropServiceRepo cropServicerepo;



//save the information about crop
@PostMapping("/saveCropDetails")
	public Crop save(Crop crop) {
		Crop c=cropServiceRepo.save(crop);
		return c;
		}

	//find all the details
@GetMapping("/findAllCropDetails")
	public List<Crop> getAll() {
		
		return cropServiceRepo.findAll();
	}

	//find crop by id
@GetMapping("/findAllCropDetails/{id}")
	public Optional<Crop> getAllCropById(String id) 
	{
		return cropServiceRepo.findById(id);
	}

	//Delete crop by id
@DeleteMapping("/delete/{id}")
	public String deleteCrop(String id) {
		cropServiceRepo.deleteById(id);
		return "Delete CropDetails with id:"+id;
		
		
	}
@PutMapping("/update/{id}")
	public String updateCrop(Crop crop) {
		cropServiceRepo.save(crop);
		return "Crop Updated Successfully";
	}
}